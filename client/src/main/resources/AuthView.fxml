<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<VBox fx:controller="AuthController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <ProgressBar fx:id="operationProgress" managed="false" visible="false" maxWidth="Infinity"/>
    <HBox fx:id ="authPanel">
        <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="Логин"/>
        <PasswordField fx:id="passField" HBox.hgrow="ALWAYS" promptText="Пароль"/>
        <Button text="Войти" HBox.hgrow="ALWAYS" onAction="#tryToAuthorize"/>
    </HBox>
</VBox>